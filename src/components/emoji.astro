<span id="emoji">🌈</span>

<script>
  // prettier-ignore
  const emojis = [
    "👀", "✨", "🌈", "🌞", "🌚", "🍄", "🐛", "🌸", "🎉", "👋", "🗿",
    "🦋", "🪁", "🪐", "🌺", "🚂", "🐲", "🎊", "🦩", "🦜", "🎂", "🏳️‍🌈",
  ]

  const getRandomEmoji = (exclude: string) => {
    const filtered = emojis.filter((e) => e !== exclude);
    return filtered[Math.floor(Math.random() * filtered.length)];
  };

  const emoji = document.getElementById("emoji")!;
  if (!window.matchMedia("(prefers-reduced-motion: reduce)").matches)
    setInterval(() => (emoji.innerText = getRandomEmoji(emoji.innerText)), 750);
</script>
