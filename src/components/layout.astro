---
import '../global.css';

import favicon from '@/assets/favicon.png';
import headshot from '@/assets/headshot.avif';
import { state } from '@/lib/translate';

type Props = { title?: string };

const defaultTitle = 'Quinten Coret';
const title = Astro.props.title
  ? `${Astro.props.title} â€“ ${defaultTitle}`
  : defaultTitle;

const { t, locale } = state;
---

<!doctype html>
<html lang={locale}>
  <head>
    <meta charset="UTF-8" />
    <link rel="canonical" href={Astro.request.url} />
    <link rel="alternate" hreflang={t.meta.other} href={`/${t.meta.other}/`} />
    <meta name="description" content="CV - Quinten Coret" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href={favicon.src} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <main class="mx-auto my-12 max-w-lg space-y-10 px-4">
      <header>
        <nav class="mb-8 flex items-center justify-between">
          <a href="/" class="flex items-center gap-6 !no-underline">
            <img
              src={headshot.src}
              width="64"
              height="64"
              class="rounded-full border border-neutral-700"
              loading="eager"
              alt={t.about.name}
            />
            <h1 class="text-2xl font-[625] text-neutral-100">{t.about.name}</h1>
          </a>
          <a href={`/${t.meta.other}/`}>{t.meta.otherLocalizedName}</a>
        </nav>
      </header>
      <slot />
    </main>
  </body>
</html>
