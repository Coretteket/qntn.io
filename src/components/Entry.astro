---
type Props = {
  title: string;
  href: string;
  from: string;
  to?: string;
};

const { title, href, from, to } = Astro.props;

const date = from === to ? from : `${from} â€“ ${to ?? "now"}`;
---

<article class="my-4 grid grid-cols-2 items-center">
  <h3 class="my-2 text-lg">
    <a {href}>{title}</a>
  </h3>
  <p class="text-right text-neutral-400">{date}</p>
  <p class="col-span-2">
    <slot />
  </p>
</article>
