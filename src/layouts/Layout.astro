---
import favicon from "@/assets/favicon.png";

type Props = { title?: string };

const defaultTitle = "Quinten Coret";
const title = Astro.props.title
  ? `${Astro.props.title} – ${defaultTitle}`
  : defaultTitle;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Résumé of Quinten Coret" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href={favicon.src} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  html {
    font-family: system-ui, sans-serif;
    @apply text-neutral-800 dark:bg-neutral-900 dark:text-neutral-300;
  }

  a[href] {
    @apply text-cyan-600 font-medium hover:underline dark:text-pink-400;
  }

  b {
    @apply font-semibold dark:font-bold;
  }
</style>
